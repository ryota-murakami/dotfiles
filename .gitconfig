[color]
	ui = true

[alias]
  st = status
  co = checkout
  ci = commit -av
  df = diff
  br = branch
  mg = merge
  up = "!f(){ git add --all && git commit -m 'up'; };f"
  nippo = log --author=ryota-murakami --since=yesterday --format='- %s' --date=iso
  subup = submodule foreach git pull origin master --ff
  graph = log --graph --date-order --decorate --stat  -C -M
  showpr = "!f() { git log --merges --oneline --reverse --ancestry-path $1...master | grep 'Merge pull request #' | head -n 1; }; f"
  openpr = "!f() { hub browse -- `git log --merges --oneline --reverse --ancestry-path $1...master | grep 'Merge pull request #' | head -n 1 | cut -f5 -d' ' | sed -e 's%#%pull/%'`; }; f"
  llog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[user]
  name = ryota-murakami
  email = dojce1048@gmail.com
[core]
  excludesfile = /Users/ryota.murakami/dotfiles/.gitignore_global
  editor = vim
  filemode = false
  ignorecase = false
	pager = diff-so-fancy | less --tabs=4 -RFX
[push]
  default = current
[pull]
  rebase = false
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[init]
  defaultBranch = main
[gui]
  fontui = -family .AppleSystemUIFont -size 16 -weight normal -slant roman -underline 0 -overstrike 0
  fontdiff = -family Menlo -size 18 -weight normal -slant roman -underline 0 -overstrike 0
[interactive]
	diffFilter = diff-so-fancy --patch
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
